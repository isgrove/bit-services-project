<Page x:Class="BitServicesDesktopApp.Views.JobManagementView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BitServicesDesktopApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JobManagementView">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50px" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="dgBooking" Margin="5" ItemsSource="{Binding AllJobs}" SelectedItem="{Binding SelectedJob}"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Label Content="Client Name: " Grid.Row="0" Grid.Column="0"/>
            <TextBox IsReadOnly="True" x:Name="txtClientName" Text="{Binding SelectedJob.ClientName}" Grid.Row="0" Grid.Column="1" Margin="5" />
            <Label Content="Client Location: " Grid.Row="1" Grid.Column="0"/>
            <ComboBox x:Name="cmbClientLocation" ItemsSource="{Binding ClientLocations, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                DisplayMemberPath="Status"
                Text="{Binding SelectedJob.LocationId, UpdateSourceTrigger=PropertyChanged}"
                Grid.Row="1" Grid.Column="1" Margin="5" />
            <Label Content="Client Street: " Grid.Row="2" Grid.Column="0"/>
            <TextBox IsReadOnly="True" x:Name="txtClientStreet" Text="{Binding SelectedJob.ClientStreet}" Grid.Row="2" Grid.Column="1" Margin="5" />
            <Label Content="Client Suburb : " Grid.Row="3" Grid.Column="0"/>
            <TextBox IsReadOnly="True" x:Name="txtClientSuburb" Text="{Binding SelectedJob.ClientSuburb}" Grid.Row="3" Grid.Column="1" Margin="5" />
            <Label Content="Client Postcode: " Grid.Row="4" Grid.Column="0"/>
            <TextBox IsReadOnly="True" x:Name="txtClientPostcode" Text="{Binding SelectedJob.ClientPostcode}" Grid.Row="4" Grid.Column="1" Margin="5" />
            <Label Content="Deadline Date: " Grid.Row="5" Grid.Column="0"/>
            <DatePicker IsEnabled="False"  x:Name="dtpDeadlineDate" SelectedDate="{Binding SelectedJob.DeadlineDate}" Grid.Row="5" Grid.Column="1" Margin="5" />

            <Label Content="Contractor First Name: " Grid.Row="0" Grid.Column="2"/>
            <TextBox IsReadOnly="True" x:Name="txtContractorFirstName" Text="{Binding SelectedJob.ContractorFirstName}" Grid.Row="0" Grid.Column="3" Margin="5" />
            <Label Content="Contractor Last Name: " Grid.Row="1" Grid.Column="2"/>
            <TextBox IsReadOnly="True" x:Name="txtContractorLastName" Text="{Binding SelectedJob.ContractorLastName}" Grid.Row="1" Grid.Column="3" Margin="5" />
            <Label Content="Required Skill: " Grid.Row="2" Grid.Column="2"/>
            <ComboBox x:Name="cmbRequiredSkill" ItemsSource="{Binding Skills, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                DisplayMemberPath="Status"
                Text="{Binding SelectedJob.RequiredSkills, UpdateSourceTrigger=PropertyChanged}"
                Grid.Row="2" Grid.Column="3" Margin="5" />
            <Label Content="Job Status: " Grid.Row="3" Grid.Column="2"/>
            <ComboBox x:Name="cmbBookingStatus" ItemsSource="{Binding JobStatuses, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                DisplayMemberPath="Status"
                Text="{Binding SelectedJob.JobStatus, UpdateSourceTrigger=PropertyChanged}"
                Grid.Row="3" Grid.Column="3" Margin="5" />
            <Label Content="Description: " Grid.Row="4" Grid.Column="2"/>
            <TextBox IsReadOnly="True" x:Name="txtDescription" Text="{Binding SelectedJob.Description}" Grid.Row="4" Grid.Column="3" Margin="5" Grid.RowSpan="2" />
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3">
            <Button Command="{Binding UpdateCommand}" x:Name="btnUpdate" Content="SAVE" Width="150" Margin="10"/>
            <Button x:Name="btnDelete" Content="DELETE" Width="150" Margin="10"/>
            <Button x:Name="btnAdd" Content="ADD" Width="150" Margin="10" Click="btnAdd_Click"/>
        </StackPanel>
    </Grid>
</Page>
