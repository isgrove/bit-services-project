<Page x:Class="BitServicesDesktopApp.Views.JobManagementView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BitServicesDesktopApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JobManagementView">

    <!-- TODO: Add tab for each "Job Status" -->
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50px" />
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="dgJobs" Margin="5"
                  ItemsSource="{Binding Jobs}"
                  SelectedItem="{Binding SelectedJob}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Job Id" Binding="{Binding JobId}"/>
                <DataGridTextColumn Header="Client Id" Binding="{Binding ClientId}"/>
                <DataGridTextColumn Header="Location Id" Binding="{Binding LocationId}"/>
                <DataGridTextColumn Header="Contractor Id" Binding="{Binding AssignedContractorId}"/>
                <DataGridTextColumn Header="Required Skill" Binding="{Binding RequiredSkill}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Kilometers" Binding="{Binding Kilometers}"/>
                <DataGridTextColumn Header="Deadline Date" Binding="{Binding DeadlineDate, StringFormat='dddd, dd MMMM yyyy'}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Label Content="Client Name: " Grid.Row="0" Grid.Column="0"/>
            <TextBox IsReadOnly="True" x:Name="txtClientName" Text="{Binding SelectedJob.ClientName}" Grid.Row="0" Grid.Column="1" Margin="5" />
            <Label Content="Client Location: " Grid.Row="1" Grid.Column="0"/>
            <!-- TOOD: Fix text not showing the selected suburb -->
            <ComboBox x:Name="cmbClientLocation" ItemsSource="{Binding SelectedClientLocations, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      DisplayMemberPath="Suburb"
                      Text="{Binding SelectedJob.Location.Suburb, UpdateSourceTrigger=PropertyChanged}"
                      Grid.Row="1" Grid.Column="1" Margin="5" />
            <Label Content="Client Street: " Grid.Row="2" Grid.Column="0"/>
            <TextBox IsReadOnly="True" x:Name="txtClientStreet" Text="{Binding SelectedJob.ClientStreet}" Grid.Row="2" Grid.Column="1" Margin="5" />
            <Label Content="Client Suburb : " Grid.Row="3" Grid.Column="0"/>
            <TextBox IsReadOnly="True" x:Name="txtClientSuburb" Text="{Binding SelectedJob.ClientSuburb}" Grid.Row="3" Grid.Column="1" Margin="5" />
            <Label Content="Client Postcode: " Grid.Row="4" Grid.Column="0"/>
            <TextBox IsReadOnly="True" x:Name="txtClientPostcode" Text="{Binding SelectedJob.ClientPostcode}" Grid.Row="4" Grid.Column="1" Margin="5" />
            <Label Content="Deadline Date: " Grid.Row="5" Grid.Column="0"/>
            <DatePicker IsEnabled="False"  x:Name="dtpDeadlineDate" SelectedDate="{Binding SelectedJob.DeadlineDate}" Grid.Row="5" Grid.Column="1" Margin="5" />

            <Label Content="Required Skill: " Grid.Row="0" Grid.Column="2"/>
            <ComboBox x:Name="cmbRequiredSkill" ItemsSource="{Binding Skills, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                DisplayMemberPath="SkillName"
                Text="{Binding SelectedJob.RequiredSkill, UpdateSourceTrigger=PropertyChanged}"
                Grid.Row="0" Grid.Column="3" Margin="5" />

            <Label Content="Contractors: " Grid.Row="1" Grid.Column="2"/>
            <ComboBox x:Name="cmbContractors" ItemsSource="{Binding Contractors, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      DisplayMemberPath="FirstName"
                      Text="{Binding SelectedJob.AssignedContractor.FirstName, UpdateSourceTrigger=PropertyChanged}"
                      Grid.Row="1" Grid.Column="3" Margin="5" />
            <Label Content="Job Status: " Grid.Row="2" Grid.Column="2"/>
            <ComboBox x:Name="cmbBookingStatus" ItemsSource="{Binding JobStatuses, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                DisplayMemberPath="Status"
                Text="{Binding SelectedJob.JobStatus, UpdateSourceTrigger=PropertyChanged}"
                Grid.Row="2" Grid.Column="3" Margin="5" />
            <Label Content="Description: " Grid.Row="3" Grid.Column="2"/>
            <TextBox IsReadOnly="True" x:Name="txtDescription" Text="{Binding SelectedJob.Description}" Grid.Row="3" Grid.Column="3" Margin="5" Grid.RowSpan="3" />
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3">
            <Button Command="{Binding UpdateCommand}" x:Name="btnUpdate" Content="SAVE" Width="150" Margin="10"/>
            <Button x:Name="btnDelete" Content="DELETE" Width="150" Margin="10"/>
            <Button x:Name="btnAdd" Content="ADD" Width="150" Margin="10" Click="btnAdd_Click"/>
        </StackPanel>
    </Grid>
</Page>
